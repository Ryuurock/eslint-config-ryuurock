{
  "name": "eslint-config-ryuurock",
  "version": "1.0.0",
  "description": "A collection of various general eslint for typescript",
  "main": "index.js",
  "scripts": {
    "lint": "yarn lint:format && yarn lint:es-fix",
    "lint:format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,html,json,md}'",
    "lint:es": "eslint --ext js,jsx,ts,tsx",
    "lint:es-fix": "eslint --ext js,jsx,ts,tsx --fix",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/Ryuurock/eslint-config-ryuurock"
  },
  "files": [
    "rules",
    "index.js",
    "README.md"
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "react",
    "typescript"
  ],
  "author": "Ryuurock Long",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.1",
    "prettier": "^2.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "conventional-changelog-cli": "^2.0.34",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "typescript": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -p false",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,json,md}": [
      "prettier --write"
    ]
  }
}
